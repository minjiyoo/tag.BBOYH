<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fam.TalkActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOM"
                android:id="@+id/button_talk_home"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.16"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHA"
                android:id="@+id/button_talk_chat"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button_talk_home"
                android:layout_toStartOf="@+id/button_talk_home"
                android:layout_weight="0.16"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOA"
                android:id="@+id/button_talk_board"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button_talk_chat"
                android:layout_toStartOf="@+id/button_talk_chat"
                android:layout_weight="0.16"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAL"
                android:id="@+id/button_talk_calendar"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button_talk_home"
                android:layout_toEndOf="@+id/button_talk_home"
                android:layout_weight="0.16"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACC"
                android:id="@+id/button_talk_account"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.16"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"
                android:id="@+id/button_talk_setting"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.16"/>

        </LinearLayout>

        <ScrollView
            android:layout_height="380dp"
            android:layout_width="match_parent"
            android:text="채팅 내용 뜨는 곳"
            android:id="@+id/talk_scrollView"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="내용 치는 곳"
            android:id="@+id/editText_talk_ChattingEditText" />
    </LinearLayout>

</RelativeLayout>
